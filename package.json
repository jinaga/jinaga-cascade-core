{
  "name": "jinaga-cascade-core",
  "version": "0.1.0",
  "description": "Incremental, event-driven data pipeline system for Jinaga Cascade",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:types": "tsd --files \"src/test/**/*.test-d.ts\"",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\""
  },
  "keywords": [
    "data-pipeline",
    "incremental-processing",
    "reactive",
    "data-transformation"
  ],
  "license": "MIT",
  "dependencies": {
    "@stablelib/base64": "^1.0.1",
    "@stablelib/sha512": "^1.0.1",
    "@stablelib/utf8": "^1.0.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tsd": "^0.33.0",
    "typescript": "^5.0.0"
  }
}

